<!DOCTYPE html>
<html>
  <head>
    <title>Lastam</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <%= yield %>
    </div>

    <% if logged_in? %>
      <%= button_to "Logout", sessions_path, method: :delete, class: "btn btn-danger" %>
    <% else %>
      <%= link_to "Login", login_path %>
    <% end %>
  </body>
</html>
